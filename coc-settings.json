{
  "suggest.autoTrigger": "always",
  "diagnostic.errorSign": "✖",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ℹ",
  "snippets.ultisnips.enable": false,
  "java.jdt.ls.vmargs": "-noverify -Xmx2G -XX:+UseG1GC -XX:+UseStringDeduplication",
  "javascript.validate.enable": false,
  "list.maxHeight": 10,
  "list.normalMappings": {
    "t": "action:tabe",
    "v": "action:vsplit",
    "s": "action:split",
    "d": "expr:GetDeleteAction"
  },
  "list.insertMappings": {
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-w>": "command:wincmd k"
  },
  "list.source.grep.command": "rg",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "languageserver": {
    "solidity": {
      "command": "solidity-language-server",
      "args": ["--stdio"],
      "rootPatterns": [".git/"],
      "filetypes": ["solidity"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"]
    },
    "sqls": {
      "command": "sqls",
      "args": [],
      "filetypes": ["sql"],
      "shell": true,
      "settings": {
        "sqls": {
          "connections": [
            {
              "driver": "postgresql",
              "dataSourceName": "host=127.0.0.1 port=15432 user=postgres password=postgres dbname=postgres sslmode=disable"
            }
          ]
        }
      }
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "prisma",
    "dart",
    "rust",
    "go",
    "solidity",
    "java"
  ],
  "graphql.filetypes": ["graphql"],
  "python.jediEnabled": false,
  "python.linting.enabled": false,
  "flutter.openDevLogSplitCommand": "botright 10split",
  "rust-analyzer.enable": true,
  "rust-analyzer.experimental.procAttrMacros": true,
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "python.analysis.typeCheckingMode": "off",
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml"
}
